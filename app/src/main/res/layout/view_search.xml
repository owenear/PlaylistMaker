<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="8dp"
    android:orientation="horizontal"
    android:id="@+id/viewLayout"
    android:background="?attr/colorPrimary"
    android:theme="@style/Theme.SearchView.PlaylistMaker">

    <ImageView
        android:id="@+id/coverImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="@dimen/search_view_margin"
        android:layout_gravity="start|center_vertical"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimary"
        >

        <TextView
            android:id="@+id/trackTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Smells Like Teen Spirit"
            android:layout_gravity="center_vertical"
            android:background="?attr/colorPrimary"
            android:textSize="@dimen/search_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/artistTextView"
                style="@style/searchViewTextSmallStyle"
                tools:text="Nirvana"
                android:textFontWeight="400"
                />

            <ImageView
                android:id="@+id/dotImageView"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/baseline_circle_12"
                android:layout_margin="@dimen/search_view_margin"
                android:layout_gravity="center_vertical"
                app:tint="?attr/colorOnSecondary"
                >
            </ImageView>

            <TextView
                android:id="@+id/timeTextView"
                style="@style/searchViewTextSmallStyle"
                tools:text="5:03"
                android:textFontWeight="400"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_gravity="end|center_vertical"
        app:tint="?attr/colorOnSecondary"
        android:layout_marginStart="-24dp"
        >
    </ImageView>

</LinearLayout>