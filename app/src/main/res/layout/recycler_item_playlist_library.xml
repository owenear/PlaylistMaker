<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    >

        <ImageView
            android:id="@+id/playlistCoverImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/baseline_gesture_24"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/playlistName"
            android:layout_height="16dp"
            android:layout_width="match_parent"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Best Songs"
            android:background="?attr/colorPrimary"
            android:textSize="@dimen/playlist_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/playlistCoverImageView"
            />

        <TextView
            android:id="@+id/playlistTrackCount"
            android:layout_height="16dp"
            android:layout_width="match_parent"
            android:textColor="?attr/colorOnPrimary"
            tools:text="25 tracks"
            android:background="?attr/colorPrimary"
            android:textSize="@dimen/playlist_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/playlistName"/>

</androidx.constraintlayout.widget.ConstraintLayout>