<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    tools:context=".presentation.settings.activity.SettingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        app:titleTextAppearance="@style/toolbarStyle"
        app:title="@string/settings_button"
        app:navigationIcon="@drawable/arrow_back"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:titleMargins="0dp"
        />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/nightThemeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:paddingStart="@dimen/settings_text_padding_horizontal"
        android:paddingEnd="@dimen/settings_switch_padding_end"
        android:paddingVertical="@dimen/settings_text_padding_vertical"
        android:text="@string/settings_night"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/settings_text_size"
        app:thumbTint="?attr/colorOnSecondary"
        app:trackTint="?attr/colorSecondary"
        app:switchMinWidth="36dp"
        />

    <com.google.android.material.textview.MaterialTextView
        style="@style/settingsItemTextStyle"
        android:id="@+id/shareTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/share"
        android:text="@string/settings_share"
        />

    <com.google.android.material.textview.MaterialTextView
        style="@style/settingsItemTextStyle"
        android:id="@+id/supportTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/support"
        android:text="@string/settings_support" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/settingsItemTextStyle"
        android:id="@+id/agreementTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/arrow_forward"
        android:text="@string/settings_agreement" />

</LinearLayout>