<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Main.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="colorOnSecondary">@color/blue</item>
    </style>
    <style name="Theme.Settings.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/grey</item>
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/grey</item>
    </style>
    <style name="Theme.Search.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/grey</item>
    </style>
    <style name="Theme.SearchView.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSecondary">@color/grey</item>
    </style>
    <style name="Theme.Player.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/light_grey_2</item>
        <item name="colorOnSecondary">@color/light_grey</item>
    </style>
    <style name="Theme.Library.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSecondary">@color/grey</item>
    </style>
    <style name="Theme.Playlist.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurfaceContainerHigh">@color/light_grey</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialogButton</item>
    </style>
</resources>