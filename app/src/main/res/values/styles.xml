<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
    </style>

    <style name="settingsFrameStyle">
        <item name="android:paddingStart">@dimen/settings_frame_padding_start</item>
        <item name="android:paddingEnd">@dimen/settings_frame_padding_end</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="settingsTextStyle">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
    </style>

    <style name="searchViewTextSmallStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/search_small_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="searchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_button_text_size</item>
        <item name="cornerRadius">@dimen/search_button_corner</item>
        <item name="android:paddingVertical">@dimen/search_padding_vertical</item>
        <item name="android:paddingHorizontal">@dimen/search_padding_horizontal</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
    </style>
    <style name="placeholderTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_placeholder_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="playerTrackInfoTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_track_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="playerTrackInfoTextStyleValue" parent="playerTrackInfoTextStyle">
        <item name="android:lines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="toolbarStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>
